<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/qq"
                        android:background="@drawable/wallpaper"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="My Profile"
                            android:layout_marginLeft="20sp"
                            android:layout_marginBottom="100dp"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="45sp"
                            android:textStyle="bold" />
                        <ImageButton
                            android:visibility="gone"
                            android:layout_toLeftOf="@id/tv"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back_btn"
                            android:id="@+id/btn_back"
                            android:layout_width="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="50dp"
                            android:hint="Enter Password...."
                            android:src="@drawable/ic_arrow_back_black_24dp" />
                        <ImageButton
                            android:visibility="visible"
                            android:layout_toLeftOf="@id/tv"
                            android:layout_centerVertical="true"
                            android:background="@drawable/back_btn"
                            android:id="@+id/activity_back"
                            android:layout_width="50dp"
                            android:layout_marginLeft="20dp"
                            android:layout_height="50dp"
                            android:hint="Enter Password...."
                            android:src="@drawable/ic_arrow_back_black_24dp" />


                    </RelativeLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardview"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="20sp"
                        android:layout_below="@+id/qq"
                        android:layout_marginLeft="20sp"
                        android:layout_marginRight="20sp"
                        app:cardCornerRadius="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/layout_1"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="71dp"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="Name"
                                android:textColor="@color/cardview"
                                android:maxLines="1"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/name"
                                android:drawableLeft="@drawable/person_blue"
                                android:background="@drawable/textviewshape"
                                android:layout_width="350dp"
                                android:layout_height="50sp"
                                android:layout_margin="7dp"
                                android:maxLines="1"
                                android:textSize="20dp"
                                android:layout_marginBottom="392dp"
                                android:ems="10"
                                android:inputType="textPersonName" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="Phone Number"
                                android:textColor="@color/cardview"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/phone_no"
                                android:drawableLeft="@drawable/phone_blue"
                                android:layout_width="350dp"
                                android:layout_height="50sp"
                                android:layout_margin="7dp"
                                android:background="@drawable/textviewshape"
                                android:maxLines="1"
                                android:layout_marginBottom="392dp"
                                android:ems="10"
                                android:inputType="number" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="Email ID"
                                android:textColor="@color/cardview"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <EditText
                                android:id="@+id/email"
                                android:drawableLeft="@drawable/email_blue"
                                android:layout_width="350dp"
                                android:layout_height="50sp"
                                android:layout_margin="7dp"
                                android:layout_marginBottom="392dp"
                                android:inputType="none"
                                android:background="@drawable/textviewshape"
                                android:maxLines="1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="Password"
                                android:textColor="@color/cardview"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <RelativeLayout
                                android:layout_width="350dp"
                                android:layout_margin="7dp"
                                android:layout_marginBottom="392dp"
                                android:layout_height="50sp">
                                <EditText
                                    android:id="@+id/not_edit"
                                    android:drawableLeft="@drawable/password_blue"
                                    android:layout_width="350dp"
                                    android:layout_height="50sp"
                                    android:background="@drawable/textviewshape"
                                    android:inputType="none"
                                    android:hint="Enter Password...."
                                    android:maxLines="1"
                                    android:text="**********" />
                                <ImageButton
                                    android:id="@+id/edit_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_edit_black_24dp"
                                    android:layout_marginLeft="320dp"
                                    style="@style/Widget.AppCompat.Button.Borderless"/>
                            </RelativeLayout>
                            <Button
                                android:id="@+id/db_button"
                                android:layout_width="350sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="20sp"
                                android:elevation="10dp"
                                android:layout_marginRight="20sp"
                                android:layout_marginTop="20sp"
                                android:layout_marginBottom="20sp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardviewbutton"
                                android:textColor="@color/colorWhite"
                                android:text="CONFIRM CHANGES"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/layout_2"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="Email ID"
                                android:textColor="@color/cardview"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <EditText
                                android:id="@+id/mail"
                                android:drawableLeft="@drawable/email_blue"
                                android:layout_width="350dp"
                                android:layout_height="50sp"
                                android:layout_margin="7dp"
                                android:layout_marginBottom="392dp"
                                android:inputType="none"
                                android:background="@drawable/textviewshape"
                                android:maxLines="1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="Old Password"
                                android:textColor="@color/cardview"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <EditText
                                android:id="@+id/old_pass_ed"
                                android:drawableLeft="@drawable/password_blue"
                                android:layout_width="350dp"
                                android:hint="Current Password...."
                                android:layout_height="50sp"
                                android:layout_margin="7dp"
                                android:layout_marginBottom="392dp"
                                android:inputType="textPassword"
                                android:background="@drawable/textviewshape"
                                android:maxLines="1" />
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="New Password"
                                android:textColor="@color/cardview"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <EditText
                                android:id="@+id/password1"
                                android:drawableLeft="@drawable/password_blue"
                                android:layout_width="350dp"
                                android:hint="New Password...."
                                android:layout_height="50sp"
                                android:layout_margin="7dp"
                                android:layout_marginBottom="392dp"
                                android:inputType="textPassword"
                                android:background="@drawable/textviewshape"
                                android:maxLines="1" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="26dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="22dp"
                                android:text="Confirm Password"
                                android:textColor="@color/cardview"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <EditText
                                android:id="@+id/confirm_pass_ed"
                                android:drawableLeft="@drawable/password_blue"
                                android:layout_width="350dp"
                                android:hint="Confirm Password...."
                                android:layout_height="50sp"
                                android:layout_margin="7dp"
                                android:layout_marginBottom="392dp"
                                android:inputType="textPassword"
                                android:background="@drawable/textviewshape"
                                android:maxLines="1" />
                            <Button
                                android:id="@+id/pass_btn"
                                android:visibility="gone"
                                android:layout_width="350sp"
                                android:elevation="10dp"
                                android:layout_marginRight="20sp"
                                android:layout_marginBottom="20sp"
                                android:layout_marginTop="20sp"
                                android:layout_below="@+id/cardview"
                                android:layout_marginLeft="20sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cardviewbutton"
                                android:textColor="@color/colorWhite"
                                android:text="CHANGE PASSWORD"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_below="@+id/cardview"
                        android:indeterminateDrawable="@drawable/progressdrawable"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10sp"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:indeterminate="true"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>