<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Wallet"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/wallpaper"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Wallet"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="20sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorWhite"
                        android:textSize="37sp" />
                    <ImageButton
                        android:layout_toLeftOf="@id/d"
                        android:visibility="visible"
                        android:background="@drawable/back_btn"
                        android:id="@+id/back_btn"
                        android:layout_width="50dp"
                        android:layout_marginTop="20sp"
                        android:layout_height="50dp"
                        android:hint="Enter Password...."
                        android:src="@drawable/ic_arrow_back_black_24dp" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20sp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/image_wallet"
                            android:layout_width="80sp"
                            android:layout_height="120sp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_account_balance_wallet_blue_24dp" />

                        <TextView
                            android:id="@+id/bal_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20sp"
                            android:layout_marginTop="5dp"
                            android:text="Wallet Balance"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/image_wallet"
                            android:textAlignment="center"
                            android:textColor="@color/cardview"
                            android:textSize="32dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dp_bal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25sp"
                            android:layout_marginRight="20sp"
                            android:layout_toRightOf="@+id/image_wallet"
                            android:text="₹ 0"
                            android:layout_below="@+id/bal_title"
                            android:textColor="@color/cardview"
                            android:textSize="45dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginBottom="5sp"
                            android:layout_below="@+id/dp_bal"
                            android:layout_centerHorizontal="true"
                            android:text="Services offered by EASYMED PVT LTD"
                            android:textColor="@color/cardview"
                            android:textSize="12sp" />



                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_marginTop="40dp"
                android:elevation="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Money to Wallet"
                        android:textAlignment="center"
                        android:textColor="@color/cardview"
                        android:textSize="32dp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/ed_add"
                        android:layout_below="@+id/tt1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="₹ Amount"
                        android:inputType="numberDecimal"
                        android:textSize="30dp" />

                    <RelativeLayout
                        android:id="@+id/rr1"
                        android:layout_below="@+id/ed_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="match_parent">
                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_centerInParent="true"
                                    android:layout_marginTop="20dp">

                                    <Button
                                        android:id="@+id/clear"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:text="CLEAR" />
                                    <Button
                                        android:id="@+id/Btn10"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="75dp"
                                        android:layout_height="wrap_content"
                                        android:text="+10" />

                                    <Button
                                        android:id="@+id/Btn50"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="75dp"
                                        android:layout_height="wrap_content"
                                        android:text="+50"
                                        android:textSize="15dp" />

                                    <Button
                                        android:id="@+id/Btn100"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="75dp"
                                        android:layout_height="wrap_content"
                                        android:text="+100" />
                                    <Button
                                        android:id="@+id/Btn200"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="75dp"
                                        android:layout_height="wrap_content"
                                        android:text="+200" />

                                    <Button
                                        android:id="@+id/Btn500"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="75dp"
                                        android:layout_height="wrap_content"
                                        android:text="+500" />

                                    <Button
                                        android:id="@+id/Btn1000"
                                        style="?android:attr/borderlessButtonStyle"
                                        android:layout_width="75dp"
                                        android:layout_height="wrap_content"
                                        android:text="+1000" />
                                </LinearLayout>
                            </HorizontalScrollView>


                        </LinearLayout>
                    </RelativeLayout>

                    <Button
                        android:layout_below="@id/rr1"
                        android:id="@+id/add_money"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/cardviewbutton"
                        android:text="ADD MONEY"
                        android:enabled="false"
                        android:clickable="false"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/Txn_History"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Transaction History"
                android:textAlignment="center"
                android:textColor="@color/cardview"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>